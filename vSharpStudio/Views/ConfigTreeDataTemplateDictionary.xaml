<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dat="clr-namespace:vSharpStudio.vm.ViewModels;assembly=vSharpStudio.vm"
             xmlns:Converters="clr-namespace:vSharpStudio.wpf.Converters;assembly=vSharpStudio.wpf" 
                    xmlns:local="clr-namespace:vSharpStudio.Views">

    <Converters:ConverterIconNameToResource x:Key="ConverterIconNameToResource"/>
    <Converters:ConverterCountToWidth x:Key="ConverterCountToWidth"/>

    <HierarchicalDataTemplate DataType="{x:Type dat:Property}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{StaticResource iconProperty}" />
            <TextBlock Text="{Binding NodeText}" Margin="2,0,0,2" />
            <StackPanel VerticalAlignment="Center">
                <Rectangle Fill="Red" Height="4" Width="{Binding CountErros, Converter={StaticResource ConverterCountToWidth}, Mode=OneWay}" VerticalAlignment="Bottom" />
                <Rectangle Fill="#FFFBA104" Height="4" Width="{Binding CountWarnings, Converter={StaticResource ConverterCountToWidth}, Mode=OneWay}" VerticalAlignment="Bottom" Margin="0,1,0,1" />
                <Rectangle Fill="#FF04EEF9" Height="4" Width="{Binding CountInfos, Converter={StaticResource ConverterCountToWidth}, Mode=OneWay}" VerticalAlignment="Bottom" />
            </StackPanel>
        </StackPanel>
    </HierarchicalDataTemplate>
