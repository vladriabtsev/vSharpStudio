<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dat="clr-namespace:vSharpStudio.vm.ViewModels;assembly=vSharpStudio.vm"
             xmlns:Converters="clr-namespace:vSharpStudio.wpf.Converters;assembly=vSharpStudio.wpf" 
                    xmlns:local="clr-namespace:vSharpStudio.Views">

    <Converters:ConverterIconNameToResource x:Key="ConverterIconNameToResource"/>

    <HierarchicalDataTemplate DataType="{x:Type dat:Constants}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Constants, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Constant}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{StaticResource iconProperty}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Enumerations}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Enumerations, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Enumeration}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Enumeration, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:EnumerationPair}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{StaticResource iconProperty}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Catalogs}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Catalogs, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Catalog}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Catalog, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Properties}" ItemsSource="{Binding SubNodes}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{Binding StatusIcon, ConverterParameter=Properties, Converter={StaticResource ConverterIconNameToResource}, Mode=OneWay}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:Property}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{StaticResource iconProperty}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
</ResourceDictionary>