    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="{x:Type dat:EnumerationPair}">
        <StackPanel Orientation="Horizontal">
            <ContentControl Template="{StaticResource iconProperty}" />
            <TextBlock Text="{Binding NodeText}" />
        </StackPanel>
    </HierarchicalDataTemplate>
