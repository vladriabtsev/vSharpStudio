            <TabItem Header="Documents and mappings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Select documents which can POST to this register" FontWeight="Bold" />
                        <controls:CollectionFromCollection Grid.Row="1"
                                                           TitleLeft="Not selected"
                                                           ListLeft="{Binding ListNotSelectedDocuments}"
                                                           TitleRight="Selected"
                                                           ListRight="{Binding ListSelectedDocuments}"
                                                           SelectedRight="{Binding SelectedDoc, Mode=TwoWay}">
                        </controls:CollectionFromCollection>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Document for Mapping is not selected" FontWeight="Bold" Foreground="Red" Visibility="{Binding VisibilityTextDocNotSelected}" />
                        <TextBlock Text="{Binding TextDocSelected}" FontWeight="Bold" Visibility="{Binding VisibilityTextDocSelected}" />
                        <CheckBox Grid.Row="1" IsChecked="{Binding IsShowCompatible}" Content="Show only compatible document properties" />
                        <DataGrid Grid.Row="2" ItemsSource="{Binding ListMappings}" AutoGenerateColumns="False" HorizontalGridLinesBrush="#FFE1E1E1" VerticalGridLinesBrush="#FFE1E1E1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                                <DataGridTemplateColumn Header="Mapped To" Width="*" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <HierarchicalDataTemplate>
                                            <ComboBox ItemsSource="{Binding ListToMap}" SelectedItem="{Binding Selected, Mode=TwoWay}" 
                                                      DisplayMemberPath="PathInObject" SelectionChanged="ComboBox_SelectionChanged" />
                                        </HierarchicalDataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
