            <TabItem Header="***General" ToolTip="Register settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Documents which can POST to this register" FontWeight="Bold" />
                        <controls:CollectionFromCollection Grid.Row="1"
                                                           TitleLeft="Not selected"
                                                           ListLeft="{Binding ListNotSelectedDocuments}"
                                                           TitleRight="Selected"
                                                           ListRight="{Binding ListSelectedDocuments}">
                        </controls:CollectionFromCollection>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Mapping selected document properties to this register" FontWeight="Bold" />
                        <controls:CollectionFromCollection Grid.Row="1"
                                                           TitleLeft="Register properties"
                                                           ListLeft="{Binding ListNotSelectedDocuments}"
                                                           TitleRight="Mapped to"
                                                           ListRight="{Binding ListSelectedDocuments}">
                        </controls:CollectionFromCollection>
                    </Grid>
                    <Grid Grid.Column="2">
