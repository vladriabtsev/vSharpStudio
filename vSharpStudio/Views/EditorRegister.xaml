                        <TextBlock Grid.Row="1" Text="Register properties" FontWeight="Bold" HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" Text="Document properties" FontWeight="Bold" HorizontalAlignment="Right"  />
