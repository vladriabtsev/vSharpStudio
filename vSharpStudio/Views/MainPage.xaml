<UserControl x:Class="vSharpStudio.Views.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vSharpStudio.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Menu-->
        <Grid>
            <TextBlock Text="Menu" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" MinWidth="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="20" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" MinHeight="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MinHeight="20" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="3*" MinWidth="20" />
                    </Grid.ColumnDefinitions>
                    <!--Config Tree-->
                    <Grid Grid.Column="0">
                        <TextBlock Text="Config Tree" />
                    </Grid>
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="3" Background="#FFAA6868" HorizontalAlignment="Center" />
                    <!--Editors-->
                    <Grid Grid.Column="2">
                        <TextBlock Text="Editors" />
                    </Grid>
                </Grid>
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" Height="3" Background="#FFAA6868" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                <!--List All Validations-->
                <Grid Grid.Row="2">
                    <TextBlock Text="List All Validations" />
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="3" Background="#FFAA6868" HorizontalAlignment="Center" />
            <!--List Properties-->
            <Grid Grid.Column="2">
                <TextBlock Text="List Properties" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
