<UserControl x:Class="vSharpStudio.Views.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vSharpStudio.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:vSharpStudio.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:MainPageVM, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Menu-->
        <Grid>
            <ToolBarPanel>
                <ToolBar>
                    <Button Command="{Binding CommandConfigSave}" ToolTip="{Binding SaveToolTip}">
                        <ContentControl Template="{StaticResource iconSave}" />
                    </Button>
                    <!--<Button Command="{Binding CommandConfigSave}" Visibility="{Binding CommandAddNew.Visibility}" ToolTip="Ctrl-S - save config">
                        <ContentControl Template="{StaticResource iconSaveAll}" />
                    </Button>-->
                    <Button Command="{Binding CommandConfigSaveAs}" ToolTip="Alt-S - save config as">
                        <ContentControl Template="{StaticResource iconSaveAs}" />
                    </Button>
                </ToolBar>
            </ToolBarPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" MinWidth="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="20" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" MinHeight="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MinHeight="20" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="3*" MinWidth="20" />
                    </Grid.ColumnDefinitions>
                    <!--Config Tree-->
                    <Grid Grid.Column="0">
                        <local:ConfigTree />
                    </Grid>
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="5" HorizontalAlignment="Center" Opacity="0.5" >
                        <GridSplitter.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </RadialGradientBrush>
                        </GridSplitter.Background>
                    </GridSplitter>
                    <!--Editors-->
                    <Grid Grid.Column="2">
                        <local:Editors />
                    </Grid>
                </Grid>
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Opacity="0.5" >
                    <GridSplitter.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0.003"/>
                            <GradientStop Color="White" Offset="1"/>
                        </RadialGradientBrush>
                    </GridSplitter.Background>
                </GridSplitter>
                <!--List All Validations-->
                <Grid Grid.Row="2">
                    <local:ValidationListForSelectedNode />
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="5" HorizontalAlignment="Center" Opacity="0.5" >
                <GridSplitter.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </RadialGradientBrush>
                </GridSplitter.Background>
            </GridSplitter>
            <!--List Properties-->
            <Grid Grid.Column="2">
                <local:PropertiesList />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
