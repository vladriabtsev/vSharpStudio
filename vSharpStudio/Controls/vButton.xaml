<UserControl x:Class="vSharpStudio.Controls.vButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vSharpStudio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ToolTip="{Binding ToolTipText}">
        <Button Command="{Binding Command}" IsEnabled="{Binding IsEnabled}">
            <!--<ContentControl Content="{Binding IconPath}" ContentTemplateSelector="{StaticResource iconContentTemplateSelector}" />-->
            <ContentControl Template="{Binding IconControlTemplate}" />
        </Button>
    </Grid>
</UserControl>
