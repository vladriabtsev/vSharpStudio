<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.7.0" />
    <PackageReference Include="Grpc" Version="1.19.0" />
    <PackageReference Include="Grpc.Tools" Version="1.19.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProtoBuf Include="..\proto\vsharpstudio.proto" GrpcServices="Client">
      <Link>proto\vsharpstudio.proto</Link>
    </ProtoBuf>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="MvvmProto.cs">
      <DependentUpon>MvvmProto.tt</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="MvvmProto.tt">
      <LastGenOutput>MvvmProto.cs</LastGenOutput>
      <Generator>TextTemplatingFileGenerator</Generator>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="rem $(SolutionDir)\generators\GenProtoToMvvm\bin\Debug\netcoreapp2.1\GenProtoToMvvm.dll $(TargetPath) Proto.Config $(SolutionDir)\vSharpStudio.vm\ViewModels\ProtoViewModels.cs" />
  </Target>

</Project>
