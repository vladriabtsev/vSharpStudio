<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="gen_doc.bat" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.9.1" />
    <PackageReference Include="Grpc" Version="1.22.0" />
    <PackageReference Include="Grpc.Tools" Version="1.22.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\proto\conn_mssql.proto" GrpcServices="Client">
      <Link>proto\conn_mssql.proto</Link>
    </Protobuf>
    <Protobuf Include="..\proto\proto_doc.proto" GrpcServices="Client">
      <Link>proto\proto_doc.proto</Link>
    </Protobuf>
    <ProtoBuf Include="..\proto\vsharpstudio.proto" GrpcServices="Client">
      <Link>proto\vsharpstudio.proto</Link>
    </ProtoBuf>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="gen_doc.bat" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <!--https://developers.google.com/protocol-buffers/docs/reference/cpp/google.protobuf.compiler.plugin-->
    <Exec Command="$(ProjectDir)gen_doc.bat $(ProjectDir)..\&#xD;&#xA;" />
  </Target>

</Project>
