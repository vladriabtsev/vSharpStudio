<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.7.0" />
    <PackageReference Include="Grpc" Version="1.20.0" />
    <PackageReference Include="Grpc.Tools" Version="1.20.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\proto\proto_doc.proto" GrpcServices="Client">
      <Link>proto\proto_doc.proto</Link>
    </Protobuf>
    <ProtoBuf Include="..\proto\vsharpstudio.proto" GrpcServices="Client">
      <Link>proto\vsharpstudio.proto</Link>
    </ProtoBuf>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <!--https://developers.google.com/protocol-buffers/docs/reference/cpp/google.protobuf.compiler.plugin-->
    <Exec Command="$(SolutionDir)protoc\bin\protoc.exe -I=$(SolutionDir)proto --plugin=protoc-gen-doc=$(SolutionDir)protoc\bin\protoc-gen-doc.exe --doc_out=$(SolutionDir)doc --doc_opt=html,index.html $(SolutionDir)proto\vsharpstudio.proto  &#xD;&#xA;$(SolutionDir)protoc\bin\protoc.exe -I=$(SolutionDir)proto --plugin=protoc-gen-doc=$(SolutionDir)protoc\bin\protoc-gen-doc.exe --doc_out=$(SolutionDir)doc --doc_opt=json,proto.json $(SolutionDir)proto\vsharpstudio.proto  &#xD;&#xA;cd $(SolutionDir)generators\GenFromProto\bin\&#xD;&#xA;$(SolutionDir)generators\GenFromProto\bin\GenFromProto.exe&#xD;&#xA; rem docker run --rm -v $(SolutionDir)generators\GenFromProto:/out -v $(SolutionDir)proto:/protos pseudomuto/protoc-gen-doc --doc_opt=json,proto.json &#xD;&#xA;rem docker run --rm -v $(SolutionDir)doc:/out -v $(SolutionDir)proto:/protos pseudomuto/protoc-gen-doc" />
  </Target>

</Project>
