<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.7.0" />
    <PackageReference Include="Grpc" Version="1.20.0" />
    <PackageReference Include="Grpc.Tools" Version="1.20.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\proto\attr.proto" GrpcServices="Both">
      <Link>proto\attr.proto</Link>
    </Protobuf>
    <ProtoBuf Include="..\proto\vsharpstudio.proto" GrpcServices="Client">
      <Link>proto\vsharpstudio.proto</Link>
    </ProtoBuf>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="rem $(SolutionDir)protoc\bin\protoc.exe -I=$(SolutionDir)proto --csharp_out=$(SolutionDir)generators/GenFromProto $(SolutionDir)proto/vsharpstudio.proto" />
  </Target>

</Project>
