<UserControl xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="vSharpStudio.wpf.ControlsUser.ButtonAsync"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vSharpStudio.wpf.ControlsUser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <xctk:BusyIndicator IsBusy="True" DisplayAfter="0">
            <ContentControl>
                <Button />
            </ContentControl>
        </xctk:BusyIndicator>
        <StackPanel Orientation="Horizontal">
            <Button />
        </StackPanel>
    </Grid>
</UserControl>
